<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/authentication_navigation"
    app:startDestination="@id/startFragment2">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.simplibuy.authentication.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.simplibuy.authentication.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment2"
        android:name="com.example.simplibuy.authentication.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_startFragment2_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
</navigation>